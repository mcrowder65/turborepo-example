{
  "name": "turborepo-example",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Matt Crowder <mcrowder65@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/rs",
    "apps/rstwo"
  ],
  "scripts": {
    "build": "turbo run build",
    "setup": "yarn clean && yarn",
    "clean": "yarn --cwd apps/rs clean && yarn --cwd apps/rstwo clean",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**", "build/**"]
      },
      "test": {
        "dependsOn": ["^build"],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "devDependencies": {
    "turbo": "^1.0.28"
  }
}
